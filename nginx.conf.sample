server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name tnhub.kr www.tnhub.kr;

    # Let's Encrypt 인증을 위한 설정
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    # HTTP -> HTTPS 리디렉션
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl ipv6only=on;

    server_name tnhub.kr www.tnhub.kr;

    # SSL 인증서 설정 (기존 설정 유지)
    ssl_certificate /etc/letsencrypt/live/tnhub.kr/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/tnhub.kr/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # 1. React Frontend (정적 파일 서빙)
    # Jenkins가 /var/www/html 경로에 빌드된 파일을 복사해둡니다.
    root /var/www/html;
    index index.html;

    location / {
        # SPA 라우팅 지원: 파일이 없으면 index.html을 보여줌
        try_files $uri $uri/ /index.html;
    }

    # 2. Spring Boot Backend (API 프록시)
    # /api/ 로 시작하는 요청은 백엔드(8080 포트)로 보냅니다.
    # ⚠️ 중요: proxy_pass에 trailing slash(/)를 붙이지 않아야 /api 경로가 유지됩니다.
    location /api/ {
        proxy_pass http://localhost:8080;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # 3. OAuth2 로그인 프록시
    location /oauth2/ {
        proxy_pass http://localhost:8080;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # 4. 로그인/로그아웃 프록시
    location ~ ^/(login|logout) {
        proxy_pass http://localhost:8080;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # 5. 파일 업로드/다운로드/표시 프록시
    location ~ ^/(upload|download|display)/ {
        proxy_pass http://localhost:8080;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 파일 업로드 크기 제한 (1GB)
        client_max_body_size 1024M;
    }
}
